<div class="log-in-page">
  <h1> Your profile information </h1>
  <div class="profile-information">
  Name: <%= current_user.first_name %> <%= current_user.last_name %><br>
  Email Address: <%= current_user.email %><br>
  Address: <%= current_user.address %><br>
  Phone Number: <%= current_user.phone_number %>
</div>

<%= link_to "Change your profile information here", edit_user_registration_path %>
<h1> Your Items </h1>
  <td><% @gears.each do |gear| %>
    <td class="col-sm-12 col-md-6 col-lg-4">
      <%=link_to(gear_path(gear.id)) do %>
      <div class="card-profile">
        <%= gear.name %>
        <br>
          <% end %>
        Category: <%= gear.category %>
        <br>
        Price: $<%= gear.price %>
        <br>
        Description: <%= gear.description %>
        <br>
          <%= cl_image_tag gear.photo, height: 185, width: 250, crop: :fill %><br>
        <button type="button" class="btn btn-link"><%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, gear_path(gear), method: :delete, data: {confirm: "Are you sure you want to delete this gear from the database?"}  %></button>
      </div>
    <% end %>
  </td>
</td>
<h1> Your requests (coming soon)</h1>
<%= link_to "Back to home page", root_path%>
</div>
