


<div class="main-container map-container">
  <div class="card-container-with-map">
  <% @gears.each do |gear| %>
    <div class="col-sm-12 col-md-6 col-lg-6">
      <%=link_to(gear_path(gear.id)) do %>
      <div class="card">
        <%= cl_image_tag gear.photo, height: 185, width: 250, crop: :fill %>
        <div class="card-block">
          <h4 class="card-title"><%= gear.name.capitalize %></h4>
          <div class="meta">
            <h6><%= gear.category.capitalize %></h6>
          </div>
          <div class="card-text"><%= gear.description.capitalize %>
          </div>
        </div>
        <div class="card-footer">
          <span class="float-right">Price:</span>
          <span><i class="card-price"><strong></i><%= gear.price %>$/day</strong></span>

        </div>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
