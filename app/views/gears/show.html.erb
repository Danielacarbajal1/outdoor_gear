<div class="card-product">
<%= cl_image_tag @gear.photo, height: 300, width: 400, crop: :fill if @gear.photo.present? %>
  <div class="card-product-infos">
    <h2><%= @gear.name.capitalize %></h2>
    <p> Category: <%= @gear.category.capitalize %></p>
    <p><%= @gear.description.capitalize %></p>
    <p>Price:<strong><%= @gear.price %>$/day</strong></p>
  </div>


<div class="container">
  <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Make a request</button>

  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">

        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h1 class="modal-title">Add a new request</h1>
        </div>

        <%= simple_form_for([@gear, @request]) do |f| %>
          <%= f.input :start, as: :date, html5: true%>
          <%= f.input :end, as: :date, html5: true %>
        <div class="modal-footer">
          <%= button_tag 'OK', class: 'btn btn-primary btn-lg'  %>
        </div>
        <% end %>
      </div>

    </div>
  </div>

</div>
</div>


